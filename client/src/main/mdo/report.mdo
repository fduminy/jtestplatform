<model>
  <id>report</id>
  <name>Report</name>
  <description>Report Data Model</description>
  
  <defaults>
    <default>
      <key>package</key>
      <value>org.jtestplatform.client.report</value>
    </default>
  </defaults>
  
  <classes>
    <class rootElement="true" xml.tagName="run_report">
     <name>RunReport</name>
     <fields>
        <field xml.attribute="true">
          <name>timestamp</name>
          <type>String</type>
          <identifier>true</identifier>
        </field>
     
        <field>
          <name>platformReports</name>
          <association xml.itemsStyle="flat">
            <type>PlatformReport</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
     </fields>         
    </class>
    
    <class xml.tagName="platform-report">
     <name>PlatformReport</name>
     <fields>
        <field>
          <name>platform</name>
          <association xml.itemsStyle="flat">
            <type>Platform</type>
            <multiplicity>1</multiplicity>
          </association>
        </field>
        
        <field>
          <name>testFrameworkReports</name>
          <association xml.itemsStyle="flat">
            <type>TestFrameworkReport</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
     </fields>         
    </class>

    <class>
      <name>Platform</name>
      <fields>
        <field xml.attribute="true">
          <name>cdrom</name>
          <type>String</type>
          <identifier>true</identifier>
        </field>
        <field xml.attribute="true">
          <name>cpu</name>
          <type>String</type>
          <identifier>true</identifier>
        </field>
        <field xml.attribute="true">
          <name>nbCores</name>
          <type>int</type>
          <defaultValue>1</defaultValue>
          <identifier>true</identifier>
        </field>
        <field xml.attribute="true">
          <name>wordSize</name>
          <type>int</type>
          <defaultValue>32</defaultValue>
          <identifier>true</identifier>
        </field>
        <field xml.attribute="true">
          <name>memory</name>
          <type>long</type>
          <required>true</required>
          <identifier>true</identifier>
          <description>Domain's memory size in kilobytes.</description>                           
        </field>
      </fields>
    </class>

    <class xml.tagName="test-framework-report">
      <name>TestFrameworkReport</name>
      <fields>
        <field xml.attribute="true">
          <name>name</name>
          <type>String</type>
          <identifier>true</identifier>
        </field>
        
        <field>
          <name>testReports</name>
          <association xml.itemsStyle="flat">
            <type>TestReport</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
      </fields>
    </class>
    
    <class xml.tagName="test-report">
      <name>TestReport</name>
      <fields>
        <field xml.attribute="true">
          <name>name</name>
          <type>String</type>
          <identifier>true</identifier>
        </field>
        <field xml.attribute="true">
          <name>success</name>
          <type>boolean</type>
        </field>
      </fields>
    </class>
  </classes>
</model>
