<domain type='kvm' id='1'>
    <name>$config.domainName$</name>
    <memory>$config.platform.memory$</memory>
    <currentMemory>$config.platform.memory$</currentMemory>
    <vcpu>$config.platform.nbCores$</vcpu>
    <os>
        <type arch='x86_64' machine='pc-0.11'>hvm</type>
        <boot dev='cdrom'/>
    </os>
    <features>
        <acpi/>
        <apic/>
        <pae/>
    </features>
    <clock offset='utc'/>
    <on_poweroff>destroy</on_poweroff>
    <on_reboot>restart</on_reboot>
    <on_crash>restart</on_crash>
    <devices>
        <emulator>/usr/bin/kvm</emulator>
        <disk type='file' device='cdrom'>
            <source file='$config.platform.cdrom$'/>
            <target dev='hdc' bus='ide'/>
            <readonly/>
        </disk>

        <interface type='network'>
            <mac address='$macAddress$'/>
            <source network='$networkName$'/>
            <target dev='vnet0'/>
        </interface>

        <serial type='pty'>
            <source path='/dev/pts/7'/>
            <target port='0'/>
        </serial>
        <console type='pty' tty='/dev/pts/7'>
            <source path='/dev/pts/7'/>
            <target port='0'/>
        </console>
        <input type='mouse' bus='ps2'/>
        <graphics type='vnc' port='5900' autoport='yes' keymap='fr'/>
        <sound model='es1370'/>
        <video>
            <model type='cirrus' vram='9216' heads='1'/>
        </video>
    </devices>
</domain>
